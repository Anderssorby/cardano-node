cabal-version: 2.4

name:                   cardano-api-test
version:                1.24.0
description:            Library for utilities used in testing the Cardano API.
author:                 IOHK
maintainer:             operations@iohk.io
license:                Apache-2.0
license-files:
  LICENSE
  NOTICE
build-type:             Simple

library
  exposed-modules:      Test.Cardano.Api.Typed.Gen

  other-modules:        Test.Cardano.Api.Metadata
                        Test.Tasty.Hedgehog.Group

  build-depends:
                        base >=4.12 && <5
                      , aeson                           >= 1.5.5.1
                      , base16-bytestring               >= 1.0.1.0
                      , bytestring                      >= 0.10.10.0
                      , cardano-api                     >= 1.25.0
                      , cardano-binary                  >= 1.5.0
                      , cardano-crypto-class            >= 2.0.0
                      , cardano-crypto-test             >= 1.3.0
                      , cardano-ledger-test             >= 1.3.0
                      , cardano-prelude                 >= 0.1.0.0
                      , containers                      >= 0.6.2.1
                      , hedgehog                        >= 1.0.4
                      , shelley-spec-ledger             >= 0.1.0.0
                      , tasty                           >= 1.4.0.2
                      , tasty-hedgehog                  >= 1.0.0.2
                      , text                            >= 1.2.3.2

  default-language:     Haskell2010
  default-extensions:   NoImplicitPrelude
                        OverloadedStrings

  ghc-options:          -Wall
                        -Wincomplete-record-updates
                        -Wincomplete-uni-patterns
                        -Wredundant-constraints
                        -Wpartial-fields
                        -Wcompat

  if impl(ghc < 8.10)
    ghc-options:        -Wno-incomplete-patterns
